<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004" author="blog-dev">
        <createTable tableName="tags">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>


        <createTable tableName="article_tags">
            <column name="article_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_article_tags_article"
                             references="articles(id)"/>
            </column>
            <column name="tag_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_article_tags_tag"
                             references="tags(id)"/>
            </column>
        </createTable>

        <addPrimaryKey tableName="article_tags"
                       columnNames="article_id, tag_id"
                       constraintName="pk_article_tags"/>
    </changeSet>

</databaseChangeLog>
